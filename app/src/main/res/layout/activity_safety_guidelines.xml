<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textColor="@color/black"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fire Safety Guidelines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvFireSafetyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Safety Guidelines"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageViewFire"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:importantForAccessibility="no"
                android:src="@drawable/fire"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvFireSafetyInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fire_safety_instructions"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <!-- Floods Safety Guidelines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvFloodsSafetyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floods Safety Guidelines"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageViewFloods"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:importantForAccessibility="no"
                android:src="@drawable/floods"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvFloodsSafetyInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/floods_safety_instructions"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <!-- Medical Emergency Guidelines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvMedicalEmergencySafetyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Emergency Guidelines"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageViewMedicalEmergency"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:importantForAccessibility="no"
                android:src="@drawable/medical"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvMedicalEmergencySafetyInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medical_emergency_safety_instructions"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

        <!-- Car Accident Safety Guidelines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvCarAccidentSafetyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Accident Safety Guidelines"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/imageViewCarAccident"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:importantForAccessibility="no"
                android:src="@drawable/caraccident"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvCarAccidentSafetyInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/car_accident_safety_instructions"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
